<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height">

    <LinearLayout
        android:id="@+id/linearLayout_Produtos"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lista_itens_produtos_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calabresa Acebolada "
                android:textColor="@color/bootstrap_gray" />

            <TextView
                android:id="@+id/lista_itens_produtos_complemento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Acompanha pÃ£o)"
                android:textColor="@color/bootstrap_gray"
                android:textSize="10dp"
                android:textStyle="italic" />

        </LinearLayout>

        <TextView
            android:id="@+id/lista_itens_produtos_valormeia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/bootstrap_gray" />

        <TextView
            android:id="@+id/lista_itens_produtos_valorinteira"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="30,00"
            android:textColor="@color/bootstrap_gray" />
    </LinearLayout>

    <View
        style="@style/ConfiguracaoViewMenus"
        android:layout_marginTop="5dp"
        android:focusable="false" />

</FrameLayout>
